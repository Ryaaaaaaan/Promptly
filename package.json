{
  "name": "prompteur-vocal",
  "version": "1.0.0",
  "description": "Prompteur vocal intelligent avec interface Apple Music - TypeScript + Vite",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write src"
  },
  "dependencies": {
    "typescript": "^5.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "vite": "^4.0.0"
  },
  "keywords": [
    "prompteur",
    "vocal",
    "reconnaissance-vocale",
    "typescript",
    "vite",
    "apple-music"
  ],
  "author": "mvyers",
  "license": "MIT"
}